<h1>Mmm Burgers!</h1>


<div class="container">
  <div class="row">
    <div class="col-sm" id="uneaten">
          <ul>
              <p>To Eat!</p>
            {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                     <button class="devour" data-id="{{id}}" data-devoured="{{devoured}}">
                     {{#if devoured}}YOU ATE IT!{{else}}Eat It!{{/if}}
                    </button>
                </li>
                {{/unless}}
            {{/each}}
          </ul>
    </div>
    <div class="col-sm" id="eaten">
        <ul>
            <p>Eaten</p>
            {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                     <button class="devour" data-id="{{id}}" data-devoured="{{devoured}}">
                     {{#if devoured}}YOU ATE IT!{{else}}Eat It!{{/if}}
                    </button>
                    <button class="delete-burger" data-id="{{this.id}}">Make room for more!</button>
                </li>
                {{/if}}
            {{/each}}
        </ul>
    </div>
  </div>
</div>

<form class="create-form">

  <div class="form-group">
    <label for="burg">Enter a burger you'd like to eat!</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
